<div class="mb-2">
  <%= comments.count %>件コメント
</div>
<% comments.sort.reverse.each do |comment| %>
  <% unless comment.id.nil? %>
    <div class="container">
      <div class="row border mb-2">
        <div class="my-2">
          <p><%= link_to comment.user.nickname, user_path(comment.user_id) %></p>
        </div>
        <div class="ml-2">
          <%= comment.content %>
        </div>
          <% if comment.user == current_user %>
            <%= link_to post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
              <div class="text-right mb-2">
                <i class="fas fa-trash" style="color: black;"></i>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  <% end %>
<% end %>