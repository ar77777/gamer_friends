<div class ="container text-center">
  <%= form_for(resource, as: resource_name,:html => {:class => 'd-flex flex-column mx-auto'}, url: registration_path(resource_name)) do |f| %>
    <h2>新規登録</h2>
    <div class = "row mx-auto">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <div class = "row d-flex flex-column col-sm-10 col-md-5 mx-auto">
      <%= f.text_field :nickname, autofocus: true, class: "p-2 mt-4 form-control", placeholder: "ニックネーム", autocomplete: "nickname" %>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {autofocus: true, autocomplete: "sex"}, {class: "p-2 mt-4 form-control"}) %>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {autofocus: true, autocomplete: "age"}, {class: "p-2 mt-4 form-control"}) %>
      <%= f.email_field :email, autofocus: true, class: "p-2 mt-4 form-control", placeholder:"メールアドレス", autocomplete: "email" %>
      <%= f.password_field :password, class: "p-2 mt-4 form-control", placeholder:"パスワード(6文字以上)", autocomplete: "new-password" %>
      <%= f.password_field :password_confirmation, class: "p-2 mt-4 form-control", placeholder:"パスワード(再入力)", autocomplete: "new-password" %>
      <%= f.file_field :image, class: "p-2 mt-4" %>
      <%= f.submit "登録", class: "submit p-2 my-4 btn btn-dark" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>