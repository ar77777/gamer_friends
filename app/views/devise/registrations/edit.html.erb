<div class ="container text-center">
  <div class = "row d-flex flex-column col-sm-10 col-md-5 mx-auto">
    <h2 class="mt-5"><%= current_user.nickname %>のプロフィール編集</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.label :nickname, 'ニックネーム' %>
      <%= f.text_field :nickname, autofocus: true, class: 'p-2 my-2 form-control' %>
      <%= f.label :age_id, '年齢' %>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {autofocus: true, autocomplete: "age"}, {class: "p-2 my-2 form-control"}) %>
      <%= f.label :sex_id, '性別' %>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {autofocus: true, autocomplete: "sex"}, {class: "p-2 my-2 form-control"}) %>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'p-2 my-2 form-control' %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <%= f.label :password %><p>(<%= @minimum_password_length %>文字以上)</p><i>(変更したくない場合は空白のまま更新してください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'p-2 my-2 form-control' %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'p-2 my-2 form-control' %>
      <%= f.label :current_password %> <i>(保存する際は現在のパスワードが必要です)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'p-2 my-2 form-control' %>
      <%= f.submit "プロフィールを更新", class: 'p-2 my-4 btn btn-primary' %>
    <% end %>
  </div>
</div>
