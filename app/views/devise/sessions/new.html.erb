<div class ="sign-up">
  <div class = "box-inner">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.email_field :email, autofocus: true, class: "field", placeholder:"メールアドレス", autocomplete: "email" %>
        <%= f.password_field :password, class: "field", placeholder:"パスワード(6文字以上)", autocomplete: "new-password" %>
        <%= f.submit "ログイン", class: "form-sumbit" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
