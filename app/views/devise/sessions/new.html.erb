<div class ="container">
  <div class = "row">
    <div class = "text-center m-auto">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name,:html => {:class => 'd-flex flex-column'}, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.email_field :email,:size=>"42", autofocus: true, class: "p-2 mt-4 form-control", placeholder:"メールアドレス", autocomplete: "email" %>
          <%= f.password_field :password, class: "p-2 mt-4 form-control", placeholder:"パスワード(6文字以上)", autocomplete: "new-password" %>
          <%= f.submit "ログイン",class: "submit p-2 my-4 btn btn-dark" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>