<div class ="container text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'd-flex flex-column mx-auto mt-5'}) do |f| %>
    <h2>ログイン</h2>
    <%= flash[:alert] %>
    <div class = "d-flex flex-column col-sm-10 col-md-5 mx-auto">
      <%= f.email_field :email, autofocus: true, class: "p-2 mt-4 form-control", placeholder:"メールアドレス", autocomplete: "email" %>
      <%= f.password_field :password, class: "p-2 mt-4 form-control", placeholder:"パスワード(6文字以上)", autocomplete: "current-password" %>
      <%= f.submit "ログイン",class: "p-2 my-4 btn btn-dark" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>