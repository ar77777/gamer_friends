<div class ="container">
  <div class = "row">
    <div class = "text-center m-auto">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'd-flex flex-column'}) do |f| %>
        <%= flash[:alert]%>
        <%= f.email_field :email,:size=>"42", autofocus: true, class: "field p-2 mt-4 form-control", placeholder:"メールアドレス", autocomplete: "email" %>
        <%= f.password_field :password, class: "field p-2 mt-4 form-control", placeholder:"パスワード(6文字以上)", autocomplete: "current-password" %>
        <%= f.submit "ログイン",class: "p-2 my-4 btn btn-dark" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>