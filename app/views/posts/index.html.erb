<div id="posts">
  <%= render partial: 'posts/posts' %>
</div>

<div class="text-right fixed-bottom mb-3 mr-3">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    フレンド募集投稿
  </button>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">新規投稿</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model:@post do |form| %>
        <div class="modal-body">
          <div class="form-group">
            <%= form.select :platform, [ ["PC","PC"], ["PS4", "PS4"], ["XBOX", "XBOX"] ,["3DS", "3DS"], ["スマホ", "スマホ"], ["その他", "その他"] ], {prompt: "プラットフォームを選択してください"}, {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= form.select :time_zone, [ ["17時","17時"], ["18時", "18時"], ["19時", "19時"] ,["20時", "20時"], ["21時", "21時"], ["22時", "22時"], ["23時以降", "23時以降"] ], {prompt: "時間帯を選択してください"}, {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= form.select :call, [ ["Discode","Discode"], ["LINE", "LINE"], ["Skype", "Skype"] ,["ゲーム内VC", "ゲーム内VC"], ["TS3", "TS3"], ["その他", "その他"] ], {prompt: "通話方法を選択してください"}, {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= form.text_field :game_title, placeholder:"フレンドを探したいゲーム名", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= form.text_area :text, placeholder:"お好きにコメントしてください！", class:"form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= form.submit "投稿", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="ml-3 my-5">
  <%= paginate @posts %>
</div>