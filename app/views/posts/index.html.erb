<div class = "container mt-10">
  <% @posts.each do |post| %>
    <div class = "col-xs-12 col-sm-6 col-md-4 col-lg-3 text-center my-3">
      <% if post.user.image.attached? %>
        <%= link_to image_tag(post.user.image, class: "img-responsive"), post_path(post.id) %>
      <% else %>
        <%= link_to image_tag('noimage.jpg', class: "img-responsive"), post_path(post.id) %>
      <% end %>
      <p class = "user-nickname">名前: <%= post.user.nickname %></p>
      <div class = "game-title">ゲーム名: <%= post.game_title %></div>
    </div>
  <% end %>
</div>
<%= paginate @posts, class:"pagination" %>