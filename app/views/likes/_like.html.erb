<%= render partial: 'comments/count',locals: {post: post} %>
<% if user_signed_in? %>
  <% unless post.like_user(current_user.id).blank? %>
    <%= link_to post_like_path(post_id: post.id ,id: post.likes[0].id), class:"text-decoration-none", method: :delete, remote: true do %>
      <i class="fas fa-heart text-danger"></i>
      <%= post.likes.count %>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), class:"text-decoration-none", method: :post, remote: true do %>
      <i class="far fa-heart text-danger"></i>
      <% if post.likes.count > 0 %>
        <%= post.likes.count %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <% if post.likes.count > 0 %>
    <i class="fas fa-heart text-danger"></i>
    <%= post.likes.count %>
  <% else %>
    <i class="far fa-heart text-danger"></i>
  <% end %>
<% end %>