<div class ="container text-center">
  <div class = "row d-flex flex-column col-sm-10 col-md-5 mx-auto">
    <h2 class="mt-5"><%= current_user.nickname %>のプロフィール編集</h2>
    <%= form_with model:@user, class:'d-flex flex-column mx-auto', local: true do |f| %>
      <%= f.label :nickname, 'ニックネーム' %>
      <%= f.text_field :nickname, autofocus: true, class: 'p-2 my-2 form-control' %>
      <%= f.label :age_id, '年齢' %>
      <%= f.collection_select(:age_id, Age.all, :id, :name, {autofocus: true, autocomplete: "age"}, {class: "p-2 my-2 form-control"}) %>
      <%= f.label :sex_id, '性別' %>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {autofocus: true, autocomplete: "sex"}, {class: "p-2 my-2 form-control"}) %>
      <%= f.submit 'プロフィール編集を完了する', class: 'p-2 my-4 btn btn-primary' %>
    <% end %>
  </div>
</div>