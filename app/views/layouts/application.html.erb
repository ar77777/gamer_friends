          <% end %>
          </li>
          <% unless user_signed_in? %>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: "nav-link text-white" do %>
                <i class="fas fa-sign-in-alt"></i> ログイン
              <% end %>
              </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
                <i class="fas fa-sign-in-alt"></i> 新規登録
              <% end %>
            </li>
          <% else %>
              <li class="nav-item">
                <%= link_to new_post_path, class: "nav-link text-white" do %>
                  <i class="fas fa-address-card"></i> フレンド募集
                <% end %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">マイページ</a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="#"><i class="far fa-id-badge"></i> プロフィール</a>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                <i class="fas fa-sign-out-alt"></i> ログアウト
              <% end %>
              <a class="dropdown-item" href="#"><i class="far fa-trash-alt"></i> アカウント削除</a>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
